{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",// ./
    "outDir": "./dist/out-tsc",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",// es6 makes mat-table fail
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
